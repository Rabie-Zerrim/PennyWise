{% extends 'base.html.twig' %}
{% block title %}
Admin panel
{% endblock %}


{% block body %}
<body>
<table>
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for i in list %}
                <tr>
                    <td>{{ i.firstName }}</td>
                    <td>{{ i.lastName }}</td>
                    <td>{{ i.email }}</td>
                    <td class="action-links">
                        <a href="{{ path('deleteuser', { 'id': i.idUser }) }}">Delete</a>
                        <a href="{{ path('updateuser', { 'id': i.idUser }) }}">Update</a>
                    </td>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</body>
{% endblock %}

{% block css %}
<style>
        table {
            width: 80%;
            margin: auto;
            border-collapse: collapse;
        }
        th, td {
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #f2f2f2;
        }
        tr:hover {
            background-color: #f5f5f5;
        }
        .action-links {
            display: flex;
            gap: 5px;
        }
    </style>
<link rel="stylesheet" href="{{asset('css/style.css')}}">
 <link rel="stylesheet" href="{{asset('vendor/toastr/toastr.min.css')}}">
{% endblock %}

{% block js %}
 <script src="{{asset('vendor/jquery/jquery.min.js')}}"></script>
    <script src="{{asset('vendor/bootstrap/js/bootstrap.bundle.min.js')}}"></script>
    <!--  -->
    <!--  -->
    <script src="{{asset('js/scripts.js')}}"></script>
{% endblock %}
