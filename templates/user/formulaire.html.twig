



<body class="dashboard">
{% block body %}
<div id="preloader" class="preloader-wrapper">
        <div class="loader">
            <div></div>
            <div></div>
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>
    <div class="authincation">
        <div class="container">
            <div class="row justify-content-center align-items-center g-0">
                <div class="col-xl-8">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="welcome-content">
                                <div class="welcome-title">
                                    <div class="mini-logo">
                                        <a href="index.html">
                                            <img src="images/logo-white.png" alt="" width="30" /></a>
                                    </div>
                                    <h3>Welcome to Ekash</h3>
                                </div>
                                <div class="privacy-social">
                                    <div class="privacy-link"><a href="#">Have an issue with 2-factor
                                            authentication?</a><br /><a href="#">Privacy Policy</a></div>
                                    <div class="intro-social">
                                        <ul>
                                            <li><a href="#"><i class="fi fi-brands-facebook"></i></a></li>
                                            <li><a href="#"><i class="fi fi-brands-twitter-alt"></i></a></li>
                                            <li><a href="#"><i class="fi fi-brands-linkedin"></i></a></li>
                                            <li><a href="#"><i class="fi fi-brands-pinterest"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="auth-form">
                                
                                <h4>Please answer these questions</h4>
                                 {{form_start(form,{'attr': {'novalidate': 'novalidate'}} )}}
                               
        
                                    <div class="row">
                                        <div class="col-12 mb-3">
                                            <label class="form-label">How is your income ?</label>
                                             {{ form_row(form.incometype, { 'label': false, 'attr': { 'class': 'form-control'}})}}
                                        </div>
                                        <div class="col-12 mb-3">
                                        <label class="form-label">How is your budget ?</label>
                                            {{ form_row(form.budgettype, { 'label': false, 'attr': { 'class': 'form-control'}})}}
                                        </div>
                                        <div class="col-12 mb-3">
                                        <label class="form-label">How do you get around ?</label>
                                            {{ form_row(form.transport, { 'label': false, 'attr': { 'class': 'form-control'}})}}
                                        </div>
                                        <div class="col-12 mb-3"><label class="form-label">Do you pay rent ?</label>
                                            {{ form_widget(form.rent, { 'label': false, 'attr': { 'class': 'form-radio' }})}}
                                        </div>
                                        <div class="col-12 mb-3"><label class="form-label">Do you have any debts ?</label>
                                            {{ form_widget(form.debt, { 'label': false, 'attr': { 'class': 'form-radio' } })}}
                                        </div>
                                        
                                    </div>
                                    <div class="mt-3 d-grid gap-2"><button type="submit" class="btn btn-primary me-8 text-white">Save</button></div>
                                 {{form_end(form)}}
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
</body>

{% block css %}
 <link rel="stylesheet" href="{{asset('css/style.css')}}">
 <link rel="stylesheet" href="{{asset('css/style1.css')}}">
 <link rel="stylesheet" href="{{asset('vendor/toastr/toastr.min.css')}}">
{% endblock %}

{% block js %}
 <script src="{{asset('vendor/jquery/jquery.min.js')}}"></script>
    <script src="{{asset('vendor/bootstrap/js/bootstrap.bundle.min.js')}}"></script>
    <!--  -->
    <!--  -->
    <script src="{{asset('js/scripts.js')}}"></script>
    <script>
    $(document).ready(function() {
        $('#signup-button').click(function() {
            $('form').submit();
        });
    });
</script>
{% endblock %}