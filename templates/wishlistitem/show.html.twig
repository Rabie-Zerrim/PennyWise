{% extends 'base.html.twig' %}

{% block title %}Wishlistitem{% endblock %}

{% block body %}
    <h1>Wishlistitem</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Idwishlistitem</th>
                <td>{{ wishlistitem.idwishlistitem }}</td>
            </tr>
            <tr>
                <th>Namewishlistitem</th>
                <td>{{ wishlistitem.namewishlistitem }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ wishlistitem.price }}</td>
            </tr>
            <tr>
                <th>Creationdate</th>
                <td>{{ wishlistitem.creationdate ? wishlistitem.creationdate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Priority</th>
                <td>{{ wishlistitem.priority }}</td>
                
            </tr>
            <tr>
                <th>Progress</th>
                <td>
                    <div class="progress">
                        <div class="progress-bar" style="width: {{ wishlistitem.progress }}%;" role="progressbar" aria-valuenow="{{ wishlistitem.progress }}" aria-valuemin="0" aria-valuemax="100">
                        </div>
                    </div>
                    <div class="d-flex justify-content-between mt-2">
                        <span>{{wishlistitem.progress}}%</span>
                    </div>
                </td>

            </tr>
            <tr>
                <th>Status</th>
                <td>{{ wishlistitem.status }}</td>
            </tr>
            <tr>
                <th>EmailSent</th>
                <td>{{ wishlistitem.emailSent ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_wishlistitem_index') }}">back to list</a>

    <a href="{{ path('app_wishlistitem_edit', {'idwishlistitem': wishlistitem.idwishlistitem}) }}">edit</a>

    {{ include('wishlistitem/_delete_form.html.twig') }}
{% endblock %}
