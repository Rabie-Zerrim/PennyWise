{% extends 'base2.html.twig' %}

{% block title %}Edit Debtcategory{% endblock %}

{% block body %}
    <div class="content-body">
        <div class="verification section-padding">
            <div class="container h-100">
                <div class="row justify-content-center h-100 align-items-center">
                    <div class="col-xl-5 col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Edit debt category</h4>
                            </div>
                            <div class="card-body">
                                <form method="post" action="{{ path('app_debtcategory_edit', {'NameDebt': debtcategory.NameDebt}) }}">
                                    {{ include('debtcategory/_form.html.twig', {'button_label': 'Update'}) }}
                                    {% if errors is not empty %}
                                        <div class="alert alert-danger mt-3" role="alert">
                                            <ul>
                                                {% for error in errors %}
                                                    <li>{{ error }}</li>
                                                {% endfor %}
                                            </ul>
                                        </div>
                                    {% endif %}
                                    <button type="submit" class="btn btn-success w-100">Update</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card-footer">
            <a href="{{ path('app_debtcategory_index') }}" class="btn btn-secondary">Back to List</a>
        </div>
{% endblock %}
