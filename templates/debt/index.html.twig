{% extends 'base.html.twig' %}

{% block title %}Debt {% endblock %}

{% block body %}

    <link rel="stylesheet" href="{{ asset('bundles/mercuryseriesflashy/css/flashy.css') }}">
    <link href="//fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href='//fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700' rel='stylesheet'>
    <!-- Flashy depends on jQuery -->
    <script src="//code.jquery.com/jquery.js"></script>
    <!-- Load Flashy default JavaScript -->
    <script src="{{ asset('bundles/mercuryseriesflashy/js/flashy.js') }}"></script>
    <!-- Include Flashy default partial -->
    {{ include('@MercurySeriesFlashy/flashy.html.twig') }}
	
    
    <div class="col-xl-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Debts</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <form action="" method="GET" class="search-form">
                        <input type="text" id="searchInput" name="search" placeholder="Search by type..." class="form-control">
                    </form>
                </div>
                
                <div class="table-responsive">
                    <table class="table mb-0 table-responsive-sm goals-history-table" id="debt-items-table">
                        <thead>
                            <tr>
                                <th>Iddebt</th>
                                <th>Amount</th>
                                <th>Paymentdate</th>
                                <th>Amounttopay</th>
                                <th>Interestrate</th>
                                <th>Creationdate</th>
                                <th>Type</th>
                                <th>Management</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for debt in pagination %}
                                <tr class="debt-row">
                                    <td>{{ debt.iddebt }}</td>
                                    <td>{{ debt.amount }}</td>
                                    <td><span><i class="fi fi-rr-calendar"></i></span>{{ debt.paymentdate ? debt.paymentdate|date('Y-m-d') : '' }}</td>
                                    <td>{{ debt.amounttopay }}</td>
                                    <td>{{ debt.interestrate }}</td>
                                    <td><span><i class="fi fi-rr-calendar"></i></span>{{ debt.creationdate ? debt.creationdate|date('Y-m-d') : '' }}</td>
                                    <td>{{ debt.type }}</td>
                                    <td style="display: flex; justify-content: flex-end; align-items: center;">
                                        <div class="category-type">
                                            <ul>
                                                <li>
                                                    <div class="right-category">
                                                        {{ include('debt/_delete_form.html.twig') }}
                                                        <a href="{{ path('app_debt_edit', {'iddebt': debt.iddebt}) }}" style="color:black; text-decoration:none;">
                                                            <i class="fi fi-rs-pencil"></i>
                                                        </a>
                                                    </div>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="7">no records found</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {# Pagination links #}
                <div class="pagination-box">
                    <div class="pagination">
                        {{ knp_pagination_render(pagination) }}
                    </div>
                </div>
            </div>
            <div class="add-goals-link">
                <h5 class="mb-0">Add new debt</h5>
                <a href="{{ path('app_debt_new') }}">
                    <i class="fi fi-rr-square-plus"></i>
                </a>
                <a href="{{ path('app_debt_send_sms') }}">Send SMS</a> <!-- Add SMS button -->
                <a href="{{ path('app_debt_stat') }}">Stats</a> <!-- Add stat button -->
                <a href="{{ path('app_debt_excel') }}">Excel</a> <!-- Add Excel button -->
                <a href="{{ path('app_debt_priority') }}">Priority</a> <!-- Add priority button -->
            </div>
        </div>
    </div>

    

    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const searchInput = document.getElementById('searchInput');
            const table = document.querySelector('.table tbody');

            const tableClickHandler = function (event) {
                const targetRow = event.target.closest('.debt-row');
                if (targetRow) {
                    addMarkerFromRow(targetRow);
                }
            };

            searchInput.addEventListener('input', function () {
                const searchTerm = this.value.trim().toLowerCase();
                const rows = table.querySelectorAll('.debt-row');

                rows.forEach(row => {
                    const typeCell = row.querySelector('td:nth-child(7)');
                    const type = typeCell.textContent.trim().toLowerCase();
                    
                    if (type.includes(searchTerm)) {
                        row.style.display = 'table-row';
                    } else {
                        row.style.display = 'none';
                    }
                });
            });
        });
    </script>
    
    <style>/* Custom Pagination Box Styles */
        /* Custom Pagination Box Styles */
        .pagination-box {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        /* Custom Pagination Styles */
        .pagination {
            display: flex;
            margin: 0;
            padding: 0;
        }

        .pagination .pagination-item {
            display: inline-block;
            margin: 0 5px;
        }

        .pagination .pagination-link {
            color: #007bff;
            padding: 6px 12px;
            border: 1px solid #007bff;
            border-radius: 4px;
            text-decoration: none;
        }

        .pagination .pagination-link:hover {
            background-color: #007bff;
            color: #fff;
        }

        .pagination .pagination-item.active .pagination-link {
            background-color: #007bff;
            color: #fff;
        }

        .pagination .pagination-disabled .pagination-link {
            pointer-events: none;
            color: #6c757d;
            background-color: #e9ecef;
            border-color: #dee2e6;
        }
    </style>
{% endblock %}
