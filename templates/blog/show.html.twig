{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <h1>Blog</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ blog.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ blog.content }}</td>
            </tr>
            <tr>
                <th>DatePublished</th>
                <td>{{ blog.datePublished ? blog.datePublished|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>NbrOfLikes</th>
                <td>{{ blog.nbrOfLikes }}</td>
            </tr>
            <tr>
                <th>BlogImage</th>
                <td>  <img class="me-3 rounded-circle me-0 me-sm-3" src="{{ asset('images/blog/' ~ blog.blogImage) }}" width="55" height="55" alt=""></td>

            </tr>
            <tr>
                <th>Tags</th>
                <td>{{ blog.tags ? blog.tags|join(', ') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_blog_index') }}">back to list</a>

    <a href="{{ path('app_blog_edit', {'id': blog.id}) }}">edit</a>

    {{ include('blog/_delete_form.html.twig') }}
{% endblock %}
