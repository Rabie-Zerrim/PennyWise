{{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card border-0 rounded-lg shadow-lg p-4">
                    <div class="form-group">
                        {% if not form.vars.valid %}
                            <div class="alert alert-danger" role="alert">
                                {{ form_errors(form.titletodo) }}
                                {{ form_errors(form.statustodo) }}
                            </div>
                        {% endif %}
                        <div class="form-group">
                            {{ form_label(form.titletodo, 'Title:') }}
                            {{ form_widget(form.titletodo, {attr: {class: 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.statustodo, 'Status:') }}
                            {{ form_widget(form.statustodo, {attr: {class: 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-primary btn-lg rounded-pill px-5">
                            <i class="fas fa-save mr-2"></i> Save
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{ form_end(form) }}
