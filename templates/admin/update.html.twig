<body class="dashboard">
{% block body %}
<div id="preloader" class="preloader-wrapper">
        <div class="loader">
            <div></div>
            <div></div>
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>
    <div class="auth-form">
                                <h4 style="text-align: center; ">Update</h4>
                                <div style="width: 50%; margin: 0 auto; border: 1px solid #ccc; padding: 20px; border-radius: 5px;">
                                {{ form_start(form,{'attr': {'novalidate': 'novalidate'}})}}
                                    <div class="row">
                                        <div class="col-12 mb-3">
                                            
                                        <div class="col-12 mb-3"><label class="form-label">First Name</label>
                                            
                                            {{ form_row(form.firstName, { 'label': false, 'placeholder':"{{ user.firstName }}", 'attr': { 'class': 'form-control'}})}}

                                        </div>
                                        <div class="col-12 mb-3"><label class="form-label">Last Name</label>
                                             {{ form_row(form.lastName, { 'label': false, 'placeholder':"{{ user.lastName }}", 'attr': { 'class': 'form-control'}})}}
                                        </div>
                                         <div class="col-12 mb-3">
                                            <label class="form-label">Email</label>
                                             {{ form_row(form.email, { 'label': false, 'placeholder':"{{ user.email }}", 'attr': { 'class': 'form-control'}})}}
                                        </div>
                                        <div class="col-12 mb-3">
                                            <label class="form-label">Email</label>
                                             {{ form_row(form.roles, { 'label': false, 'placeholder':"{{ user.roles }}"})}}
                                        </div>
                                        <div class="col-12 mb-3"><label class="form-label">Income</label>
                                             {{ form_row(form.incometype, { 'label': false, 'placeholder': user.incometype , 'attr': { 'class': 'form-control'}})}}
                                        </div>
                                        <div class="col-12 mb-3"><label class="form-label">Budget</label>
                                         {{ form_row(form.budgettype, { 'label': false, 'placeholder': user.budgettype, 'attr': { 'class': 'form-control'}})}}
                                        </div>
                                        <div class="col-12 mb-3"><label class="form-label">Debt</label>
                                         {{ form_row(form.debt, { 'label': false, 'placeholder':"{{ user.debt }}", 'attr': { 'class': 'form-control'}})}}
                                        </div>
                                        <div class="col-12 mb-3"><label class="form-label">Transport</label>
                                         {{ form_row(form.transport, { 'label': false, 'placeholder': user.transport , 'attr': { 'class': 'form-control'}})}}
                                        </div>
                                       <label class="form-label">Rent</label>
                                        {{ form_row(form.rent, { 'label': false, 'placeholder':"{{ user.rent }}", 'attr': { 'class': 'form-control'}})}}
                                        </div>
                                        </div>
                                    </div>
                                    <div class="mt-3 d-grid gap-2"><button type="submit" class="btn btn-primary me-8 text-white" style="width: 100%;">Update</button></div>
                                {{ form_end(form)}}
                                </div>
                            </div>
{% endblock %}
</body>

{% block css %}
<link rel="stylesheet" href="{{asset('css/style.css')}}">
 <link rel="stylesheet" href="{{asset('vendor/toastr/toastr.min.css')}}">
{% endblock %}

{% block js %}
 <script src="{{asset('vendor/jquery/jquery.min.js')}}"></script>
    <script src="{{asset('vendor/bootstrap/js/bootstrap.bundle.min.js')}}"></script>
    <!--  -->
    <!--  -->
    <script src="{{asset('js/scripts.js')}}"></script>
    <script>
    $(document).ready(function() {
        $('#signin-button').click(function() {
            $('form').submit();
        });
    });
{% endblock %}
