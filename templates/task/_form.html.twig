{{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card border-0 rounded-lg shadow-lg p-4">
                    <div class="form-group">
                        {% if not form.vars.valid %}
                                <div class="alert alert-danger" role="alert">

                                    {{ form_errors(form.descriptiontask) }}
                                    {{ form_errors(form.mtapayer) }}
                                    {{ form_errors(form.priority) }}
                                    {{ form_errors(form.duedate) }}
                                    {{ form_errors(form.statustask) }}
                                    {{ form_errors(form.idtodo) }}
                                    {{ form_errors(form.idsubcategory) }}

                                </div>
                        {% endif %}
                        {{ form_row(form) }}
                    </div>
                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-primary btn-lg rounded-pill px-5">
                            <i class="fas fa-save mr-2"></i> Save
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{ form_end(form) }}
